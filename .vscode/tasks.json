{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build fw",
            "type": "shell",
            "group": "build",
            "linux":{
                "command": "make firmware DEBUG=1",
            },
            "windows":{
                "command": "wsl make firmware DEBUG=1 -j -O",
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            }
        },
        {
            "label": "clean",
            "type": "shell",
            "group": "build",
            "linux":{
                "command": "make clean",
            },
            "windows":{
                "command": "wsl make clean",
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        },
        {
            "label": "echo",
            "type": "shell",
            "group": "build",
            "command": "echo Hello",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            }
        }
    ]
}